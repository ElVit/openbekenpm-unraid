<script>
const openbekenpm_status = () => {
    $.getJSON("/plugins/openbekenpm/status.php", (data) => {
        if (data) {
            $(".openbekenpm-energy-power").html(data.Power);
            $(".openbekenpm-energy-today").html(data.Today);
            $(".openbekenpm-energy-yesterday").html(data.Yesterday);
            $(".openbekenpm-energy-total").html(data.Total);
            $(".openbekenpm-energy-voltage").html(data.Voltage);
            $(".openbekenpm-energy-current").html(data.Current);
            $(".openbekenpm-energy-apparentpower").html(data.ApparentPower);
            $(".openbekenpm-energy-reactivepower").html(data.ReactivePower);
            $(".openbekenpm-energy-efficiency").html((Number.parseFloat(data.Factor) * 100).toFixed());
            $(".openbekenpm-costs_today").html((Number.parseFloat(data.Costs_Price) * Number.parseFloat(data.Today)).toFixed(2));
            $(".openbekenpm-costs_yesterday").html((Number.parseFloat(data.Costs_Price) * Number.parseFloat(data.Yesterday)).toFixed(2));
            $(".openbekenpm-costs_total").html((Number.parseFloat(data.Costs_Price) * Number.parseFloat(data.Total)).toFixed(2));
            $(".openbekenpm-costs_unit").html(data.Costs_Unit);
        }
    });
};
$(openbekenpm_status);
if (<?=$openbekenpm_cfg['UIREFRESH'];?>) {
    setInterval(openbekenpm_status, <?=$openbekenpm_cfg['UIREFRESH'];?>);
}
$(function() {
  // append data from the table into the correct one
  $("#db-box1").append($(".dash_openbekenpm").html());

  // reload toggle to get the correct state
  toggleView('openbekenpm_view',true);

  // reload sorting to get the stored data (cookie)
  sortTable($('#db-box1'),$.cookie('db-box1'));
});
</script>
